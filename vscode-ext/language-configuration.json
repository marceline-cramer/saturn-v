{
    "comments": {
        "lineComment": ";",
    },
    "wordPattern": "[a-zA-Z][a-zA-Z0-9_]*",
    "indentationRules": {
        "increaseIndentPattern": ":-\\s*$",
        "decreaseIndentPattern": "^\\s*\\."
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}